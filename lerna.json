{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.8.4",
  "npmClient": "pnpm",
  "packages": ["packages/*", "vscode", "inspect-extension"],
  "command": {
    "version": {
      "allowBranch": ["main", "next"],
      "conventionalCommits": true,
      "message": "release: version %s",
      "push": false
    },
    "publish": {
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "message": "release: publish %s"
    }
  }
}
